{
    "name": "DeepPSP - maxhdc",
    "n_gpu": 1,
    "use_synch_bn": false,
    "_comment": "output stride of 8 with hdc bigger",
  
      "arch": {
          "type": "DeepPSP",
          "args": {
            "freeze_bn": false,
            "backbone": "resnet50",
            "use_aux": true,
            "temp_softmax": false,
            "hdc": true,
            "dilated": false,
            "output_stride": 8,
            "hdc_dilation_bigger": true
        }
      },
  
      "train_loader": {
          "type": "VOC",
          "args":{
              "data_dir": "data/VOCtrainval_11-May-2012",
              "batch_size": 8,
              "augment": true,
              "crop_size": 380,
              "shuffle": true,
              "base_size": 400,
              "scale": true,
              "flip": true,
              "rotate": true,
              "blur": true,
              "split": "train_aug",
              "num_workers": 8
          }
      },
  
      "val_loader": {
          "type": "VOC",
          "args":{
              "data_dir": "data/VOCtrainval_11-May-2012",
              "batch_size": 8,
              "crop_size": 480,
              "val": true,
              "split": "val",
              "num_workers": 4
          }
      },
  
      "optimizer": {
          "type": "SGD",
          "differential_lr": true,
          "args":{
              "lr": 0.01,
              "weight_decay": 1e-4,
              "momentum": 0.9
          }
      },
  
      "loss": "CrossEntropyLoss2d",
      "ignore_index": 255,
      "lr_scheduler": {
          "type": "Poly",
          "args": {}
      },
  
      "trainer": {
          "epochs": 40,
          "save_dir": "saved/",
          "save_period": 10,
  
          "monitor": "max Mean_IoU",
          "early_stop": 10,
  
          "tensorboard": true,
          "log_dir": "saved/runs",
          "log_per_iter": 20,
  
          "val": true,
          "val_per_epochs": 5
      }
  }