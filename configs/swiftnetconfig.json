{
    "name": "SwiftNet-SingleScale-base",
    "n_gpu": 1,
    "use_synch_bn": false,

    "arch": {
        "type": "SwiftNetSingleScale",
        "args": {
            "layers": [2,2,2,2],
            "num_features": 128,
            "use_aux": false,
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "CityScapes",
        "args":{
            "data_dir": "./data/CityScapes",
            "mode": "fine",
            "batch_size": 8,
            "base_size": 768,
            "crop_size": 768,
            "augment": true,
            "shuffle": true,
            "scale": true,
            "flip": true,
            "rotate": false,
            "blur": false,
            "split": "train",
            "num_workers": 8
        }
    },

    "val_loader": {
        "type": "CityScapes",
        "args":{
            "data_dir": "./data/CityScapes",
            "batch_size": 8,
            "crop_size": 480,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "Adam",
        "differential_lr": true,
        "args":{
            "lr": 4e-4,
            "weight_decay": 1e-4
        }
    },

    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "OneCycle",
        "args": {}
    },

    "trainer": {
        "epochs": 200,
        "save_dir": "saved/",
        "save_period": 10,

        "monitor": "max Mean_IoU",
        "early_stop": 10,

        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 5
    }
}